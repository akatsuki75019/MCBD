<% if notice != nil %>
  <div class="toast border-none show position-fixed bottom-0 end-0 mb-3 me-3" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header header">
      <strong class="me-auto text-white">MCBD</strong>
      <small class="text-light">Il y a moins d'une minute</small>
      <button type="button" class="btn-close btn-secondary" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body color-dropdown">
      <%= notice %>
    </div>
  </div>
<% end %>