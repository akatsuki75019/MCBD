<div class="product__page__content">
  <%= render partial: "title", locals: {title_contents: "Dans le mÃªme genre" } %>
  <div class="trending__product">
    <div class="row">

      <% @books.each_slice(4) do |books_slice| %>
        <% books_slice.each do |book| %>
          <div class="col-lg-3 col-md-3 col-sm-6">
            <div class="product__item">

              <%= link_to book_path(book) do %>
                <div class="text-center">
                  <div class="zoom-hover">
                    <%= image_tag(book.image_url, class: "product__item__pic set-bg zoom-hover", data: { setbg: book.image_url }, alt: "Couverture du livre : #{book.title}") %>           
                  </div>
                  <div class="product__item__text">
                    <h5><%= book.title %></h5>
                  </div>
                </div>
              <% end %>

            </div>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>