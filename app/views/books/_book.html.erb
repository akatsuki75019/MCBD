<!-- Anime Section Begin -->
<section class="anime-details spad">
<div class="container">
  <div class="anime__details__content">
    <div class="row">
      <div class="col-lg-3">
        <%= image_tag(book.image_url, class: "anime__details__pic set-bg", data: { setbg: book.image_url }, alt: "couverture de ") %>           
      </div>
        <div class="col-lg-9">
          <div class="anime__details__text">
            <div class="anime__details__title">
              <h3><%= book.title %></h3>
                <span><%= book.author %></span>
            </div>
            <p><%= book.description%></p>
          </div>
          <div class="anime__details__widget">
            <div class="row">
              <div class="col-lg-6 col-md-6">
                <ul>
                  <li><span>Type:</span> <%= @book.category.name %></li>
                  <li><span>Editeur:</span> <%= @book.editor.name %></li>
                  <li><span>Date:</span> <%= book.release_date%> </li>
                </ul>
              </div>
              <div class="col-lg-6 col-md-6">
                <ul>
                  <li><span>ISBN:</span><%= book.isbn%> </li>
                  <li><span>Disponibilit√©:</span> Oui </li>
              </ul>
            </div>
          </div>
        </div>
        <%= render 'books/button'%>
        
      </div>
      
            
  <!-- BOOK Section End -->
  <!-- DANS LE MEME GENRE start -->
      <div class="col-lg-12">
        <div class="trending__product">
          <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">
              <div class="section-title">
                <h4>Dans le meme genre</h4>
              </div>
            </div>
          </div>
          <%= render 'card_row'%>
          <!-- DANS LE MEME GENRE end -->
          
          <!-- OU NOUS TROUVER start -->
            <div class="col-lg-8 col-md-8 col-sm-8">
              <div class="section-title">
                <h4>ou nous trouver ?</h4>
              </div>
            </div>
              
              <div class="row flex">
                <div class="col-lg-4 col-md-8 col-sm-4">
                  <img class="blog__item small__item set-bg" data-setbg="https://m.media-amazon.com/images/I/71dwbtwA4SL._AC_UF1000,1000_QL80_.jpg" alt="Description de l'image" src="https://www.leparisien.fr/resizer/efCs6S_-rGdBhi2P0NQeijAEUws=/932x582/arc-anglerfish-eu-central-1-prod-leparisien.s3.amazonaws.com/public/5UAWECLJVFOXQS6RPEGA3XXU3M.jpg">
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                  <div class="anime__review__item__text">
                    <h6>MCBD SHOP</h6>
                    <p>27 rue des Taillandiers</p>
                    <p>75011, Paris</p>
                    <p>Ouvert du lundi au samedi de 11h a 19h</p>
                  </div>
                </div>
              </div>
            </div>    
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

          


