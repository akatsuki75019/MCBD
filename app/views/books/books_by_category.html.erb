<!DOCTYPE html>
<html class="h-auto" lang="fr">
  <head>
    <title>MCBD | Librairie</title>
  </head>  

  <div class="breadcrumb-option">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="breadcrumb__links">
            <%= link_to '<i class="fa fa-home"></i> Accueil'.html_safe, root_path %>
            <span><%= Category.find_by_id(params[:category_id])&.name %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="product-page spad">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="product__page__content">
            <div class="product__page__title">
              <div class="row">
              
                <%= form_with(url: books_path, method: :get, local: true) do |form| %>
                  <div class="section-title">
                    <%= form.select(:category_id, options_for_select(@categories.collect { |category| [category.name, category.id] }, selected: params[:category_id]), {}, { class: "selector custom-select dropdown-item hover" }) %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <%= render "card" %>
        </div>
      </div>
    </div>
  </section>
</html>


