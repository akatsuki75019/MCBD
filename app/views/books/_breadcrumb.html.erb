<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__links">
          <%= link_to '<i class="fa fa-home"></i> Home'.html_safe, root_path %>
          <% if @category.present? %>
            <%= link_to @category.name, books_path(@category) %>
          <% end %>
          <% if @book.present? %>
            <span><%= @book.title %></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb End -->
