<section>
  <div class="container mb-5 pt-5">
    <div class="row">
      <div class="col-12 col-sm-7 col-md-6 m-auto">
        <div class="card border-0 shadow">
          <div class="card-body header">
            <div class="m-5">
              <div class="margin-top-sign text-center">
                <h2>Mettre à jour mon profil</h2>
              </div>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
              
                <div class="margin-top-form form-floating my-5 w-75 mx-auto">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control", id:"floatingInputValue" %>
                  <label for="floatingInputValue">Email</label>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="form-floating mb-3 w-75 mx-auto">
                  <%= f.label :current_password %> <i>(Nous avons besoin de votre mot de passe actuel pour confirmer les modifications)</i><br />
                  <%= f.password_field :current_password, autocomplete: "current-password" %>
                </div>

                <div class="field">
                  <%= f.label :password %> <i>(Laissez vide si mot de passe inchangé)</i><br />
                  <%= f.password_field :password, autocomplete: "new-password" %>
                  <% if @minimum_password_length %>
                    <br />
                    <em><%= @minimum_password_length %> caractères minimum</em>
                  <% end %>
                </div>

                <div class="field">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>

                

                <br>
                <div class="actions">
                  <%= f.submit "Mettre à jour", class: "site-btn" %>
                </div>
              <% end %>

              <br>

              <div>Unhappy? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous certain.e ?", turbo_confirm: "Êtes-vous certain.e ?" }, method: :delete, class: "site-btn-second" %></div>

              <%= link_to "Retour", :back %>
            
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<section>
  <div class="container mb-5 pt-5">
    <div class="row">
      <div class="col-12 col-sm-7 col-md-6 m-auto">
        <div class="card border-0 shadow">
          <div class="card-body header">
            <form class="custom-form" action="/users" method="POST">
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
              <div class="margin-top-sign text-center">
                <h2 class="fw-bold text-white mb-5">Mettre à jour mon mot de passe</h2>
              </div>
              <div class="margin-top-form form-floating mb-5 w-75 mx-auto">
                <input id="email" name="user[email]" type="email" autocomplete="email" required class="form-control">
                <label for="email" class="text-dark">Email</label>
              </div>

              <div class="form-floating mb-3 w-75 mx-auto">
                <input id="password" name="user[password]" type="password" autocomplete="current-password" required class="form-control">
                <label for="password" class="text-dark">Mot de passe actuel</label>
              </div>

              <div class="form-floating mb-3 w-75 mx-auto">
                <input id="password_confirm" name="user[password_confirmation]" type="password" autocomplete="current-password" required class="form-control">
                <label for="password_confirm" class="text-dark">Nouveau le mot de passe</label>
              </div>

              <div class="form-floating mb-3 w-75 mx-auto">
                <input id="password_confirm" name="user[password_confirmation]" type="password" autocomplete="current-password" required class="form-control">
                <label for="password_confirm" class="text-dark">Confirmer le nouveau mot de passe</label>
              </div>

              <div class="row mb-3">
                <div class="col-6">
                  <div class="custom-control custom-checkbox d-flex align-items-center text-muted">
                    <input id="terms" type="checkbox" value="" class="custom-control-input mx-2" required>
                    <label for="terms" class="custom-control-label text-white">J'accepte les <a href="#" class="text-light">conditions d'utilisation</a></label>
                  </div>
                </div>

                <div class="col-6 text-end">
                  <a class="float-right" href="/users/password/new">Mot de passe oublié?</a>
                </div>
              </div>

              <div class="d-flex justify-content-center mt-5">
                <button type="submit" class="site-btn w-50 p-2 mx-auto d-block">S'inscrire</button>
              </div>
              <p class="text-center text-muted mt-5 mb-0">Tu as déjà un compte ? <a href="/users/sign_in" class="fw-bold text-light"><u>Connecte-toi</u></a></p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>