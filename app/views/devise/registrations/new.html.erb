<section>
  <div class="container mb-5 pt-5">
    <div class="row">
      <div class="col-12 col-sm-7 col-md-6 m-auto">
        <div class="card border-0 shadow">
          <div class="card-body header">
            <form class="custom-form" action="/users" method="POST">
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
              <div class="margin-top-sign text-center">
                <h2 class="fw-bold text-white">Inscription</h2>
                <p class="mt-1 mb-4 text-light">Pour pouvoir faire tes achats sur MCBD !</p>
              </div>
              <div class="margin-top-form form-floating mb-3 w-75 mx-auto">
                <input id="email" name="user[email]" type="email" autocomplete="email" required class="form-control">
                <label for="email" class="text-dark">Email</label>
              </div>

              <div class="form-floating mb-3 w-75 mx-auto">
                <input id="password" name="user[password]" type="password" autocomplete="current-password" required class="form-control">
                <label for="password" class="text-dark">Mot de passe</label>
              </div>

              <div class="form-floating mb-3 w-75 mx-auto">
                <input id="password_confirm" name="user[password_confirmation]" type="password" autocomplete="current-password" required class="form-control">
                <label for="password_confirm" class="text-dark">Confirmer le mot de passe</label>
              </div>

              <div class="row mb-3">
                <div class="col-6">
                  <div class="custom-control custom-checkbox d-flex align-items-center text-muted">
                    <input id="terms" type="checkbox" value="" class="custom-control-input mx-2" required>
                    <label for="terms" class="custom-control-label text-white">J'accepte les <a href="#" class="text-light">conditions d'utilisation</a></label>
                  </div>
                </div>

                <div class="col-6 text-end">
                  <a class="float-right" href="/users/password/new">Mot de passe oublié?</a>
                </div>
              </div>

              <div class="d-flex justify-content-center mt-5">
                <button type="submit" class="site-btn w-50 p-2 mx-auto d-block">S'inscrire</button>
              </div>
              <p class="text-center text-muted mt-5 mb-0">Tu as déjà un compte ? <a href="/users/sign_in" class="fw-bold text-light"><u>Connecte-toi</u></a></p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>