<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<div class="container-fluid full-height">
  <div class="row full-height">

    <!-- Colonne pour l'image à gauche -->
    <div class="col-md-6 left-side d-none d-md-block position-relative">
      <!-- Calque transparent -->
      <div class="bg-dark-alpha position-absolute top-0 start-0 end-0 bottom-0"></div>
    
      <!-- Image -->
      <img src="" alt="Image" class="img-fluid">
    
      <!-- Texte et bouton d'inscription -->
      <div class="position-absolute top-50 start-50 translate-middle text-center text-light custom-font">
        <h1 class="mb-2 fw-bold">Déjà inscrit ?</h1>
        <h5 class="mb-5">MCBD est ravi de te revoir parmis nous !</h5>
        <a href="#" class="btn btn-outline-light w-75">Se connecter</a>
      </div>
    </div>

    <!-- Colonne pour le formulaire à droite -->
    <div class="col-md-6 right-side ">
      <form class="custom-form custom-font">
        <div class="margin-top-sign text-center">
        <h1 class="fw-bold text-primary mb-4">Inscription à la meilleure plateforme</h1>
        <p class="mt-4">Ouais ouais inscris-toi !!</p>
        </div>
        <div class="margin-top-form form-floating mb-3">
          <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
          <label for="floatingInput">Email</label>
        </div>

        <div class="form-floating mb-3">
          <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
          <label for="floatingPassword">Mot de passe</label>
        </div>
          
        <div class="form-floating mb-3">
          <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
          <label for="floatingPassword">Mot de passe</label>
        </div>
        <div class="row mb-3">
          <div class="col-6">
            <div class="custom-control custom-checkbox d-flex align-items-center text-muted">
              <input type="checkbox" class="custom-control-input mx-2" id="rememberMeCheckbox">
              <label class="custom-control-label" for="rememberMeCheckbox">
                Accepter les conditions blablabla
              </label>
            </div>
          </div>
      
          <div class="col-6 text-end">
            <a class="float-right" href="#">Mot de passe oublié?</a>
          </div>
        </div>
        
        <button type="submit" class="btn btn-success w-100 p-2">S'inscrire</button>
      </form>
    </div>
  </div>
</div>