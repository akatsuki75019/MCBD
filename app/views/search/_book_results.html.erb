<section class="product-page spad pb-4">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="product__page__content ">
          <div class="product__page__title">
            <div class="row">
              <div class="col-lg-8 col-md-8 col-sm-6">
                <div class="section-title">
                  <h4>Livres</h4>
                </div>
              </div>
            </div>
          </div>
          <% if @books %>
            <% if @books.any? %>
              <ul>
                <% @books.each do |book| %>
                  <li>
                    <%= link_to "#{book.title} de #{book.author}", book_path(book) %>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p>Pas de livre(s) trouv√©(s)</p>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>