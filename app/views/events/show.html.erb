<section class="anime-details spad">
  <div class="container">
    <div class="anime__details__content">

      <!--Event sheet-->
      <div class="row">
        <%= render @event %>
      </div>

      <section class="product-page spad pb-0 mt-3 ">
        <div class="container product__page__title">
          <div class="row">
            <div class="col-lg-12">
              <!--Last events section-->
              <div class="product__page__content">
                <div class="product__page__title">
                  <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-6">
                      <div class="section-title">
                        <h4>Nos derniers événements</h4>
                      </div>
                    </div>
                  </div>
                </div>
                <%= render 'last_events'%>
              </div>
              <!--Map section-->
              <div class="product__page__content">
                <div class="product__page__title">
                  <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-6">
                      <div class="section-title">
                        <h4>Se rendre aux événements</h4>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="d-flex justify-content-center" >
                  <%= render "layouts/maps" %>
                  <%= render "layouts/shop_infos"%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    
    </div>
  </div>
</section>
